<div class='signup-page'>
  <div class='login-page-wrapper'>
    <section class='top-sign-in'>
      <h1 class="movie-log-header">Movie Log</h1>
      <img class='logo' src="/images/logo.png" alt="logo">
    </section>
    <div class='signup-page-wrapper'>
      <a class='back-arrow-icon' href="/public/login"><img src="/images/yellow-back-button.png" alt="back-button"></a>
      <h1 class='signup-header'>Movie Log</h1>

      <form class='signup-form-wrapper' action='/auth/signup' method='POST'>
        <div class='signup-form-section-wrapper'>
          <label class='form-label' for=''>Username</label>
          <input type='text' name='username'>
        </div>

        <div class='signup-form-section-wrapper'>
          <label class='form-label' for=''>Email</label>
          <input type='text' name='email'>
        </div>

        <div class='signup-form-section-wrapper'>
          <label class='form-label' for=''>Password</label>
          <input class='password-input-style' type='password' name='password'>
          {{!-- backlog: include show pass toggle --}}
          <p class='form-label-password-bottom'>Password must be at least 8 characters</p>
        </div>

        <section class='bottom-signup'>
          <button class='signup-button' type='submit'>Sign up</button>
          <p class="account-message">
            Already have an account? <button class="log"><a class="sign-up-now-text" href="/public/login">Login
                instead!</a></button>
          </p>
        </section>
      </form>
    </div>
  </div>

</div>
<div class="background"></div>

{{!-- error message display --}}

{{#if errorMessage}}
<div class="error-message">{{ errorMessage }}</div>
{{/if}}